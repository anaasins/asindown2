{% extends 'base.html.twig' %}
{% block listuser %}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    < <link rel="stylesheet" href="{{ asset ('css/sb-admin.css')}}" />
    <title></title>
  </head>
  <body>
    <br>
    <br>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
      <div class="card-header">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable"  cellspacing="0">
